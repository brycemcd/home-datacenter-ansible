version: '2'
services:
  zookeeper:
    image: wurstmeister/zookeeper
    ports:
      - 2181:2181
  kafka:
    image: wurstmeister/kafka
    ports:
      - 9092:9092
    environment:
      KAFKA_ADVERTISED_HOST_NAME: "{{advertised_host_name}}"
      KAFKA_ZOOKEEPER_CONNECT: "{{zookeeper_seed_master}}:2181"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
